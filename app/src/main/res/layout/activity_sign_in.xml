<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="signInVM" type="com.bangkit.elise.modules.signin.data.viewmodel.SignInVM"/>
    </data>
    <LinearLayout android:gravity="start" android:id="@+id/linearSignin"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <TextView android:ellipsize="end" android:id="@+id/txtSignin"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_29pxh"
            android:layout_marginStart="@dimen/_29pxh"
            android:layout_marginTop="@dimen/_219pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{signInVM.signInModel.txtSignin}"
            style="@style/txtDMSansmedium24" tools:text="@string/lbl_sign_in"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearEmailfield"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_28pxh"
            android:layout_marginStart="@dimen/_28pxh"
            android:layout_marginTop="@dimen/_17pxv"
            android:layout_width="match_parent"
            android:orientation="horizontal" style="@style/groupStylewhite_3">
            <ImageView android:id="@+id/imageMail"
                android:layout_height="@dimen/_15pxh"
                android:layout_marginBottom="@dimen/_20pxv"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_20pxv"
                android:layout_width="@dimen/_17pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_mail"
                tools:ignore="ContentDescription" tools:src="@drawable/img_mail"/>
            <TextView android:ellipsize="end" android:id="@+id/txtEmail"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_17pxv"
                android:layout_marginEnd="@dimen/_155pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_19pxv"
                android:layout_weight="0.86" android:layout_width="0dp"
                android:lineSpacingExtra="@dimen/_5pxh"
                android:singleLine="true"
                android:text="@{signInVM.signInModel.txtEmail}"
                style="@style/txtDMSansbold14" tools:text="@string/lbl_abc_email_com"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearPasswordfield"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_28pxh"
            android:layout_marginStart="@dimen/_28pxh"
            android:layout_marginTop="@dimen/_19pxv"
            android:layout_width="match_parent"
            android:orientation="horizontal" style="@style/groupStylewhite_3">
            <LinearLayout android:id="@+id/linearRowlock"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_17pxv"
                android:layout_marginStart="@dimen/_18pxh"
                android:layout_marginTop="@dimen/_19pxv"
                android:layout_weight="0.88" android:layout_width="0dp" android:orientation="horizontal">
                <ImageView android:id="@+id/imageLock"
                    android:layout_height="@dimen/_16pxh"
                    android:layout_marginBottom="@dimen/_2pxv"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_lock"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_lock"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtValue"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="0.88"
                    android:layout_width="0dp"
                    android:lineSpacingExtra="@dimen/_5pxh"
                    android:singleLine="true"
                    android:text="@{signInVM.signInModel.txtValue}"
                    style="@style/txtDMSansbold14" tools:text="@string/lbl_your_password"/>
            </LinearLayout>
            <ImageView android:id="@+id/imageHidden"
                android:layout_height="@dimen/_14pxh"
                android:layout_marginBottom="@dimen/_20pxv"
                android:layout_marginEnd="@dimen/_19pxh"
                android:layout_marginStart="@dimen/_129pxh"
                android:layout_marginTop="@dimen/_21pxv"
                android:layout_width="@dimen/_18pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_hidden"
                tools:ignore="ContentDescription" tools:src="@drawable/img_hidden"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearRowforgotpassword"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_28pxh"
            android:layout_marginStart="@dimen/_28pxh"
            android:layout_marginTop="@dimen/_21pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <LinearLayout android:id="@+id/linearRowrememberme"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_weight="0.52" android:layout_width="0dp" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtRememberMe"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.78"
                    android:layout_width="0dp"
                    android:lineSpacingExtra="@dimen/_5pxh"
                    android:singleLine="true"
                    android:text="@{signInVM.signInModel.txtRememberMe}"
                    style="@style/txtDMSansbold14_1" tools:text="@string/lbl_remember_me"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchMaterialButtononof"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="0.22" android:layout_width="0dp"/>
            </LinearLayout>
            <TextView android:ellipsize="end"
                android:id="@+id/txtForgotPassword"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_65pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_weight="0.48" android:layout_width="0dp"
                android:lineSpacingExtra="@dimen/_5pxh"
                android:singleLine="true"
                android:text="@{signInVM.signInModel.txtForgotPassword}"
                style="@style/txtDMSansbold14_1" tools:text="@string/msg_forgot_password"/>
        </LinearLayout>
        <FrameLayout android:id="@+id/frameButtonColor"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_58pxv"
            android:layout_marginEnd="@dimen/_28pxh"
            android:layout_marginStart="@dimen/_28pxh"
            android:layout_marginTop="@dimen/_36pxv" android:layout_width="@dimen/_271pxh">
            <LinearLayout android:id="@+id/linearBtnsignin"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical" style="@style/groupStyleindigo_A200cornerRadius">
                <ImageButton
                    android:background="@drawable/rectangle_bg_indigo_a400_radius_15"
                    android:id="@+id/btnArrowright"
                    android:layout_gravity="end"
                    android:layout_height="@dimen/_30pxh"
                    android:layout_marginHorizontal="@dimen/_14pxh"
                    android:layout_marginVertical="@dimen/_14pxv"
                    android:layout_width="@dimen/_30pxh"
                    android:paddingHorizontal="@dimen/_8pxh"
                    android:paddingVertical="@dimen/_8pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_arrowright" tools:ignore="ContentDescription"/>
            </LinearLayout>
            <TextView android:ellipsize="end"
                android:id="@+id/txtContinue"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_18pxv"
                android:layout_marginEnd="@dimen/_40pxh"
                android:layout_marginStart="@dimen/_40pxh"
                android:layout_marginTop="@dimen/_18pxv"
                android:layout_width="wrap_content"
                android:letterSpacing="0.05" android:singleLine="true"
                android:text="@{signInVM.signInModel.txtContinue}"
                android:textAllCaps="true"
                style="@style/txtDMSansmedium16_1" tools:text="@string/lbl_sign_in"/>
        </FrameLayout>
        <TextView android:ellipsize="end" android:id="@+id/txtOR"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_28pxh"
            android:layout_marginStart="@dimen/_28pxh"
            android:layout_marginTop="@dimen/_29pxv"
            android:layout_width="wrap_content"
            android:lineSpacingExtra="@dimen/_5pxh"
            android:singleLine="true"
            android:text="@{signInVM.signInModel.txtOR}"
            style="@style/txtDMSansmedium16_2" tools:text="@string/lbl_or"/>
        <LinearLayout android:gravity="center_vertical"
            android:id="@+id/linearGooglesignin"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_28pxh"
            android:layout_marginStart="@dimen/_28pxh"
            android:layout_marginTop="@dimen/_12pxv"
            android:layout_width="match_parent"
            android:orientation="horizontal" style="@style/groupStylewhite_4">
            <ImageView android:id="@+id/imageGoogle"
                android:layout_height="@dimen/_26pxh"
                android:layout_marginBottom="@dimen/_15pxv"
                android:layout_marginStart="@dimen/_46pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_width="@dimen/_25pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_google"
                tools:ignore="ContentDescription" tools:src="@drawable/img_google"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtLoginwithGoog"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_14pxv"
                android:layout_marginEnd="@dimen/_45pxh"
                android:layout_marginStart="@dimen/_19pxh"
                android:layout_marginTop="@dimen/_20pxv"
                android:layout_weight="0.84" android:layout_width="0dp"
                android:lineSpacingExtra="@dimen/_5pxh"
                android:singleLine="true"
                android:text="@{signInVM.signInModel.txtLoginwithGoog}"
                style="@style/txtDMSansbold16_2" tools:text="@string/msg_login_with_goog"/>
        </LinearLayout>
        <TextView android:ellipsize="end"
            android:gravity="center_horizontal"
            android:id="@+id/txtConfirmation"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_28pxh"
            android:layout_marginStart="@dimen/_28pxh"
            android:layout_marginTop="@dimen/_25pxv"
            android:layout_width="match_parent"
            android:lineSpacingExtra="@dimen/_3pxh"
            android:singleLine="true"
            android:text="@{signInVM.signInModel.txtConfirmation}"
            style="@style/txtAirbnbCerealAppbook15" tools:text="@string/msg_don_t_have_an_a"/>
    </LinearLayout>
</layout>
